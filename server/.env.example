# Database Configuration
MONGODB_URI=mongodb://localhost:27017/uniguru
# or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/uniguru

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# Ollama Configuration (Local AI)
OLLAMA_BASE_URL=http://localhost:11434
# Optional: Ngrok URL for external access (takes priority over local URL)
OLLAMA_NGROK_URL=https://your-ngrok-url.ngrok-free.app/api/generate

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=your-session-secret-here
